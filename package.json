{
  "name": "omnidev2",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"uvicorn main_api:app --reload --port 8000\" \"wait-on tcp:5173 && electron .\"",
    "build": "vite build && electron-builder",
    "start": "electron .",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "electron": "^25.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.0.0",
    "eslint": "^8.0.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "electron-reload": "^2.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.omnidev.app",
    "productName": "OmniDev",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ]
  }
}